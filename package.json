{
  "name": "operator-betting",
  "version": "1.0.0",
  "description": "Hugo betting theme with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "start": "hugo server",
    "build": "hugo --gc --minify",
    "dev": "hugo server -D",
    "clean": "rm -rf public resources",
    "build:tailwind": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --minify",
    "build:hugo": "hugo --gc --minify",
    "build:all": "npm run clean && npm run build:tailwind && npm run build:hugo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1"
  }
}
